<h1>Admin Shelter Index</h1>

<% @shelters.each do |shelter| %>
  <div id="shelter-<%= shelter.id %>">
    <h3><%= shelter.name %></h3>
    <p>Created at: <%= shelter.created_at %></p>
  </div>
<% end %>
  <section id="shelters_with_pending_apps">
    <h1>Shelters with pending applications:</h3>
    <% @shelters_w_apps.each do |shelter| %>
    <h3><%= shelter.name %></h3>
    <p>Created at: <%= shelter.created_at %></p>
    <% end %>
  </section>