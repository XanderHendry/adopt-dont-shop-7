<h1><%= @application.name + "'s Application" %></h1>
<p>Name: <%= @application.name %></p>
<p>Street Address: <%= @application.street_address %></p>
  <li><%= @application.city %></li>
  <li><%= @application.state %></li>
  <li><%= @application.zip_code %></li>
<p>Why I would make a good home: <%= @application.description %></p>
<p>Applying to Adopt:</p>
<p>Status: <%= @application.status %></p>
<% if @application.status == "In Progress" %>
  <section id="pet_search">
    <h3>Add a Pet to this Application</h3>

    <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
      <%= f.label :search %>
      <%= f.text_field :search %>
      <%= f.submit "Search" %>
    <% end %>
    
  <% if @pets != [] %>
    <% @pets.each do |pet|%>
      <%= pet.name %>
    <% end %>
  <% end %>
      
  </section>
<% end %>

